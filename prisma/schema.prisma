generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model BarStaff {
    id      String @id @default(cuid())
    staffId String @map("staff_id")
    barId   String @map("bar_id")
    bar     Bar    @relation(fields: [barId], references: [id])

    @@index([barId])
}

model Bar {
    id           String        @id @default(cuid())
    name         String
    slug         String        @unique
    line1        String
    line2        String?
    city         String
    postcode     String
    location     Json
    openingHours Json          @map("opening_hours")
    url          String?
    updated      DateTime
    verified     Boolean       @default(false)
    staff        BarStaff[]
    beverages    BarBeverage[]
}

model Beverage {
    id          String        @id @default(cuid())
    name        String
    abv         String
    style       String
    breweryId   String        @map("brewery_id")
    brewery     Brewery       @relation(fields: [breweryId], references: [id])
    verified    Boolean       @default(false)
    BarBeverage BarBeverage[]

    @@index([breweryId])
}

model Brewery {
    id        String     @id @default(cuid())
    name      String     @unique
    url       String?
    location  Json?
    beverages Beverage[]
}

model BarBeverage {
    bar        Bar       @relation(fields: [barId], references: [id])
    barId      String    @map("bar_id")
    beverage   Beverage  @relation(fields: [beverageId], references: [id])
    beverageId String    @map("beverage_id")
    tappedOn   DateTime  @default(now())
    tappedOff  DateTime?

    @@id([barId, beverageId])
    @@index([barId])
    @@index([beverageId])
}
